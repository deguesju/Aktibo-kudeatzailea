<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".AddInvestmentActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirua sartu"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>

    <!-- Contenedor del formulario -->
    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="20dp"
        android:background="@drawable/bg_glass_card_gradient"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/text_title">

        <!-- Fuente de fondos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diru iturria"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinner_asset_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/fuentes_fondos"
            android:background="@drawable/bg_spinner_glass"
            android:paddingHorizontal="16dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/bg_spinner_glass"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"/>

        <!-- Cantidad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopurua (€)"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/input_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/bg_spinner_glass"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="156dp"
            android:elevation="6dp"/>



        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Onartu"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_glass_card_gradient"
            android:layout_marginTop="12dp"
            android:elevation="6dp"/>

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Atzera"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_glass_card_gradient"
            android:layout_marginTop="12dp"
            android:elevation="6dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
