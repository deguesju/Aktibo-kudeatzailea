<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_glass_card_gradient"
    android:clipToOutline="true">

    <!-- Nombre de la distribución -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Distribución 1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Porcentaje de cada activo resumido -->
    <TextView
        android:id="@+id/text_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC 50%, ETH 50%"
        android:textColor="#00FFAA"
        android:textSize="14sp"
        android:layout_marginEnd="12dp"/>

    <!-- Checkbox para activar/desactivar -->
    <CheckBox
        android:id="@+id/checkbox_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>
</LinearLayout>
