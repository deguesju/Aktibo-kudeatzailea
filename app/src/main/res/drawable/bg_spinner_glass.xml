<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo translúcido con efecto “vidrio” -->
    <solid android:color="#26FFFFFF" /> <!-- blanco 15% opaco -->

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" />

    <!-- Sutil borde blanco translúcido -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />

    <!-- Sombra suave (funciona mejor con elevation en el XML principal) -->
    <padding android:bottom="8dp" android:top="8dp" android:left="12dp" android:right="12dp"/>
</shape>
